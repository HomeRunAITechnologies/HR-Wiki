<IfModule mod_rewrite.c>
    RewriteEngine On

    # Handle the case where the app is in a subdirectory
    RewriteBase /~paige/wiki/

    # Redirect trailing slashes to non-slash
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)/$ $1 [R=301,L]

    # Handle asset files (CSS, JS, images, etc.)
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # Handle all other requests through index.php
    RewriteRule ^ index.php [L]
</IfModule>
